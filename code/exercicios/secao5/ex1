#Programa para receber dados de pacientes (nome, idade, peso, altura) e fornece o resultado do IMC com indicação
#dos pacientes referentes à sua condição física (abaixo do peso, peso ideal, etc.)

pacientes = [] 

while True:
    resp = input('Deseja cadastrar mais um paciente? [S/N] : ').upper()

    if resp == 'N':
        break

    pac = []
    pac_nome = input("Digite o nome do paciente: ")
    pac.append(pac_nome)
    pac_idade = int(input("Digite a idade do paciente: "))  
    pac.append(pac_idade)
    pac_altura = float(input("Digite a altura do paciente: "))
    pac.append(pac_altura)
    pac_peso = float(input("Digite o peso do paciente: "))
    pac.append(pac_peso)
    pac_imc = pac_peso / (pac_altura ** 2) 
    pac.append(round(pac_imc, 2))  # Arredondei para 2 casas decimais
    pacientes.append(pac)

print("\n--- RESULTADOS ---")
for i, pac in enumerate(pacientes): 
    imc = pac[4]

    if imc <= 18.5:
        print(f'{pac[0]}: Abaixo do peso (IMC: {imc})')
    elif 18.5 < imc <= 24.9:  
        print(f'{pac[0]}: Peso ideal (IMC: {imc})')
    elif 25.0 <= imc <= 29.9:  
        print(f'{pac[0]}: Sobrepeso (IMC: {imc})')
    else:
        print(f'{pac[0]}: Obeso (IMC: {imc})')
